mixin singleCourse
  .position-relative
    .jumbotron.jumbotron-fluid.jumbotron-singleCourse.text-center.bg-transparent
      .bg-primary.position-fixed.left.top.z-minus.h-100.w-100
        img.half-transparent.w-100.h-100.object-fit-cover(alt="our team" src='/media/team.jpg')
      .jumbotron-courses-container.text-white
        h1.display-1.mt-5.mb-3.text-white=course.headline
        p.lead.mb-5=course.subheading
        button.btn.btn-lg.btn-gradient-secondary.mt-3.mb-5(type='button' data-toggle='modal', data-target='#contactFormModal') Apply
      if course.curriculumPdf
        a.btn.btn-lg.btn-gradient-secondary.mt-3.mb-5(href='/images/'+ course.curriculumPdf target='_blank' ) Download Curriculum 

    .container.container-fluid-courses.bg-white.position-relative
      .row.row-courses
        nav#courseScrollspy.courses-scroll.col-sm-3.col-4.my-3
          ul.nav.nav-pills.flex-column.nav-courses-pills.p-4.text-center.bg-light
            h4=course.headline
            li.nav-item
              a.scrollbutton.nav-link.nav-link-spy.mb-2.active(href='#section1') Overview
            li.nav-item
              a.scrollbutton.nav-link.nav-link-spy.mb-2(href='#section2') What you will learn
            li.nav-item
              a.scrollbutton.nav-link.nav-link-spy.mb-2(href='#section3') Day at DCI
            li.nav-item
              a.scrollbutton.nav-link.nav-link-spy.mb-2(href='#section4') A success story
            li.nav-item
              a.scrollbutton.nav-link.nav-link-spy.mb-2(href='#section5') How to Apply
            button.btn.btn-gradient-secondary.btn-spy(type='button' data-toggle='modal', data-target='#contactFormModal' ) Apply Now

        .col-12.col-xl-9.py-3
          #section1.mb-5
            h2.mt-3.mb-3.text-left=course.title
            p.lead.text-left=course.subtitle  
            .row
              - 
              each object in course.archivements
                if object.icon
                  figure.col-md-4.text-center
                    .m-3.row.position-relative
                      .col-10.offset-1.col-md-8.offset-md-2.align-items-center
                        img.object-fit-cover.img-fluid.square(alt=object.description src="/media/pixel.gif" style="background-image: url('/images/"+object.icon+"')")
                    p.lead=object.description
            
          #section2.my-5
            - 
            each object in course.features
              if object.icon
                .row.container            
                  .col-12.d.flex.m-auto
                    img.img-fluid.float-left.mr-3.icons(src="/images/"+object.icon, alt=object.title)
                    h3.text-left=object.title
                    p.text-left.lead=object.subtitle
                  
          section.my-5
            h2 Want more details about our Web Development Course?
            p.lead We will send you the full course information to your email
            
          #section3.my-5.day-at-dci
            h2.mb-5 A day at DCI
            -
            each object in course.timeline
              .row.container.timelineRow            
                .col-12.d.flex.m-auto
                  div.timelineDiv.float-left.text-center
                    span.timeline=object.time
                  div.ml-5
                    h3.ml-5.pt-2.text-left=object.title 
                    p.ml-5.text-left=object.subtitle
                      
          section.my-5.row.bg-light.p-5
            div.my-2
              h2 More than just classwork
              p.lead Beyond building the hard skills in class, you need to get involved in the local tech scene and market yourself. We’re here to help you succeed with career development support and opportunities to get into the community.
              
            div.my-2
              h2 Career workshops
              p.lead preparing an industry-specific resume to creating an online presence, you’ll pick up the skills to stand out.
            
            div.my-2
              h2 Guest speakers
              p.lead additional specialised sessions from top professionals and get tips from DCI alumni.
            
            div.my-2
              h2 Company Tours
              p.lead Take a tour of a local startup and see what the work environment is all about.

          #section4.my-5
           if course.successStory
            section.my-5
              .row.bg-light.pt-4.hover-shadow.bg-light.w-10
                .col-12
                  h2.text-center Read about a senior DCI graduate
                .col-6.offset-3
                  +singleStory(course.successStory)
          
          #section5.my-5.courseSection
            .container
              .row
                .col-lg-8.col-lg-offset-3                
                  h2.how-to-apply How To Apply
                  .courseApply
                    .courseApply-step
                      span.courseApply-stepCount 1
                      p.courseApply-stepTitle Complete the application form
                    .courseApply-step
                      span.courseApply-stepCount 2
                      p.courseApply-stepTitle Visit DCI and chat with our admissions team
                    .courseApply-step
                      span.courseApply-stepCount 3
                      p.courseApply-stepTitle Reserve your spot

                  button.btn.btn-lg.btn-gradient-secondary.mt-3.mb-5(type='button' data-toggle='modal', data-target='#contactFormModal') Apply
            section.my-5.pr-md-5
              if course.locations.length > 0
                .mb-5
                  h3 This course is available in: 
                  each location in course.locations
                    span.badge.badge-primary.mr-2=location.name
                  if course.massnahmeNumber
                    h4.mt-4.text-dark
                      = "Massnahmenummer: "
                      code.text-dark=course.massnahmeNumber
                  if course.massnahmeDetails
                    p.mt-4.text-dark=course.massnahmeDetails
              h2 Come see our campus!
              p.lead Have questions? Want to see the student life for yourself? Book a one-on-one visit with our admissions team and we’ll show you around.
              p Vulkanstraße 1
              p 10367 Berlin
      if user && user.admin === "true"
        div.py-3
          a.btn.btn-outline-primary(target="_blank" href='/admin/courses/edit/'+course.slug) Edit course