extends layout.pug
block content
  .bg-light.h-100
    .container.py-5
      .row.py-5
        .col-md-6.offset-md-3.p-3.card.border-0
            h1 Login
            form.mb-3(method='post' action='/users/login')
              .form-group
                label Email
                input.form-control.bg-light(type='text' name='email' autofocus placeholder='Email')
              .form-group
                label Password
                input.form-control.bg-light(type='password' name='password' placeholder='Password')
              button.btn.btn-primary(type='submit') Signin
            a(href="/users/register") No account? Register